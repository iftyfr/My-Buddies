<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BuddysDetailsActivity"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="120dp"
        android:src="@drawable/faisal"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF02CF50"/>
    <TextView
        android:id="@+id/nameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Name"
        android:textSize="21sp"
        android:textColor="#035b24"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="#2901FF2F"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Mobile  |"
                android:textSize="17sp"
                android:textColor="#3a4a5c"/>
            <TextView
                android:id="@+id/mobileNoTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:layout_weight="8"
                android:layout_gravity="center"
                android:text="+01700000000"
                android:textSize="19sp"
                android:textColor="#000000"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:onClick="callPhone"
                android:src="@drawable/call"
                android:layout_weight="2.5"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="|"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight=".5"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:onClick="sendSMS"
                android:layout_weight="2.5"
                android:paddingRight="6dp"
                android:src="@drawable/message"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Email    |"
                android:textSize="17sp"
                android:textColor="#3a4a5c"/>
            <TextView
                android:id="@+id/emailTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="13dp"
                android:layout_weight="11"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:text="iftyfr6@gmail.com"
                android:textSize="17sp"
                android:textColor="#404953"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:onClick="sendEmail"
                android:layout_weight="2.5"
                android:paddingRight="3dp"
                android:src="@drawable/email"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fff"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:paddingLeft="25dp"
                android:text="Blood Group     |"
                android:textSize="17sp"
                android:textColor="#3a4a5c"/>
            <TextView
                android:id="@+id/bloodGroupTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:layout_weight="8"
                android:layout_gravity="center"
                android:text="A+"
                android:textSize="19sp"
                android:textColor="#000000"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#fff"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:paddingLeft="25dp"
                android:layout_gravity="center_vertical"
                android:text="Address    |"
                android:textSize="17sp"
                android:textColor="#3a4a5c"/>
            <TextView
                android:id="@+id/addressTv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_weight="10"
                android:layout_gravity="center"
                android:text="R# 17, Block# D, Mirpur-1 ,Dhaka 1216."
                android:textSize="17sp"
                android:textStyle="italic"
                android:textColor="#384553"/>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>